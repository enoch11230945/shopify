<style>
	
	{% if section.settings.parallax %}
			@media only screen and (max-width:1199px){
				/* Height background image by padding */
				.section-style-{{ section.id }} .img_bg__wrap, .section-style-{{ section.id }} .img_placeholder_wrapper {
					padding: {{ section.settings.padding_desktop | append: 'px' }} 0;
				}
				
				@media (max-width:991px){
					.section-style-{{ section.id }} .img_bg__wrap, .section-style-{{ section.id }} .img_placeholder_wrapper  {
						padding: {{section.settings.padding_mobile | append: 'px' }} 0;
					}
				}
				
				/* Style background overlay */
			{% if section.settings.use_bgo %}
				.section-style-{{ section.id }}  .img_bg__wrap:before {
					content: '';
					position: absolute;
					top: 0;
					left: 0;
					right: 0;
					bottom: 0;
					display: block;
					z-index: 1;
					background-color: {{ section.settings.bg_color | color_modify: 'alpha', section.settings.bg_color_opacity }};
					transition: .3s;
				}
			{% endif %}
			}
			@media only screen and (min-width:1200px){
				/* Height slide by paddings */
				.section-style-{{ section.id }} .section_wrap {
					padding: {{section.settings.padding_desktop | append: 'px' }} 0;
				}
				
				@media (max-width:991px){
					.section-style-{{ section.id }} .section_wrap  {
						padding: {{ section.settings.padding_mobile | append: 'px' }} 0;
					}
				}
			
				/* Style background overlay */
				{% if section.settings.use_bgo %}
					.section-style-{{ section.id }}  .section_wrap:before {
						content: '';
						position: absolute;
						top: 0;
						left: 0;
						right: 0;
						bottom: 0;
						display: block;
						z-index: 1;
						background-color: {{ section.settings.bg_color | color_modify: 'alpha', section.settings.bg_color_opacity }};
						transition: .3s;
					}
				{% endif %}
		
				/* Height parallax by padding */
				.section-style-{{ section.id }} .img_bg__wrap, .section-style-{{ section.id }} .img_placeholder_wrapper {
					padding: {{ section.settings.padding_parallax_desktop | append: 'px' }} 0;
					position: absolute;
					top: 0;
					right: 0;
					left: 0;
				}
			}
	
	{% else %}
		/* Height background image by padding */
		.section-style-{{ section.id }} .img_bg__wrap, .section-style-{{ section.id }} .img_placeholder_wrapper {
			padding: {{ section.settings.padding_desktop | append: 'px' }} 0;
		}
		
		@media (max-width:991px){
			.section-style-{{ section.id }} .img_bg__wrap, .section-style-{{ section.id }} .img_placeholder_wrapper  {
				padding: {{ section.settings.padding_mobile | append: 'px' }} 0;
			}
		}
	
		/* Style background overlay */
		{% if section.settings.use_bgo %}
		.section-style-{{ section.id }}  .img_bg__wrap:before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			display: block;
			z-index: 1;
			background-color: {{ section.settings.bg_color | color_modify: 'alpha', section.settings.bg_color_opacity }};
			transition: .3s;
		}
		{% endif %}
	
	{% endif %}
	
	
	/* Style background position -x on mobile */
	@media (max-width:575px){
		.section-style-{{ section.id }} .img_bg__wrap  {
			background-position-x: {{ section.settings.bg_pos_mobile | append: '%' }};
		}
	}
	
	/* Style inset caption */
   
    .section-style-{{ section.id }} .caption_text {
        padding: {{ section.settings.inset_caption }};
        margin: {{ section.settings.offset_caption }};
    }
	
	{% if section.blocks.size > 0 %}
		{% for block in section.blocks %}
   			
   			    .section-style-{{ section.id }} .item-{{ block.id }} {
   			        margin: {{ block.settings.offset_block }};
        	        text-indent: {{ block.settings.indent_block }};
   			    }
        	    .section-style-{{ section.id }} .item-{{ block.id }} .caption-item,
        	    .section-style-{{ section.id }} .item-{{ block.id }}.block-timer {
        	        padding: {{ block.settings.inset_block }};
				 }
				
   				 @media (max-width:575px){
                     .section-style-{{ section.id }} .item-{{ block.id }} {
                         margin-left: 0;
                         text-indent: 0;
                     }
				 }
			
   		
			.section-style-{{ section.id }} .item-{{ block.id }} .caption-item,
			.section-style-{{ section.id }} .item-{{ block.id }}.block-timer {
				color: {{ block.settings.color }};
				{% if block.settings.use_bgi %}
					background-color: {{ block.settings.bgc_color | color_modify: 'alpha', block.settings.bgc_color_opacity }};
				{% endif %}
			}
		
		{% endfor %}
	{% endif %}
</style>

<div class="section-style-{{ section.id }}">
	{%- include 'section-style' -%}
	
	<div class="{{ section.settings.container_width }}">
	
		<div class="section_wrap {% if section.settings.parallax %} parallax_block-js{% endif %}">
	{% if section.settings.image.size > 0 %}
     <div class="img_bg__wrap" style="background-image: url({{ section.settings.image | img_url: 'master' }});">
     </div>
{% else %}
    <div class="img_placeholder_wrapper">
        {{ 'image' | placeholder_svg_tag: 'img_placeholder' }}
    </div>
{% endif %}
		
	<div class="section_txt align_{{ section.settings.caption_align }} {{ section.settings.section_view }} {{ section.settings.custom_class }}" {% if section.settings.vertical_alignment == 'top' %}style="bottom: auto;" {% elsif section.settings.vertical_alignment == 'bottom' %} style="top: auto;" {% endif %}>
		<div class="container"> 
			<div class="caption_text text-{{ section.settings.text_align }} {% if section.settings.inverted %} inverted{% endif %} wow {{ section.settings.caption_animation }}" {% if section.settings.caption_bg_color.size > 0 %}style="background-color: {{ section.settings.caption_bg_color | color_modify: 'alpha', section.settings.caption_bg_color_opacity }}"{% endif %}>
				{% for block in section.blocks %}
					{% case block.type %}
					{% when 'custom_heading' %}
						{% if block.settings.custom_heading != blank %}
							<div class="custom_large_title item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item">{{ block.settings.custom_heading }}</div></div>
						{% endif %}
					{% when 'heading_h1' %}
						{% if block.settings.heading_h1 != blank %}
							<div class="h1 item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item">{{ block.settings.heading_h1 }}</div></div>
						{% endif %}
					{% when 'heading_h2' %}
						{% if block.settings.heading_h2 != blank %}
							<div class="h2 item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item" style="font-weight: {{ block.settings.font_weight }}">{{ block.settings.heading_h2 }}</div></div>
						{% endif %}
					{% when 'heading_h3' %}
						{% if block.settings.heading_h3 != blank %}
							<div class="h3 item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item">{{ block.settings.heading_h3 }}</div></div>
						{% endif %}
					{% when 'heading_h4' %}
						{% if block.settings.heading_h4 != blank %}
							<div class="h4 item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item" style="font-weight: {{ block.settings.font_weight }}">{{ block.settings.heading_h4 }}</div></div>
						{% endif %}
					{% when 'heading_h5' %}
						{% if block.settings.heading_h5 != blank %}
							<div class="h5 item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item">{{ block.settings.heading_h5 }}</div></div>
						{% endif %}
					{% when 'heading_h6' %}
						{% if block.settings.heading_h6 != blank %}
							<div class="h6 item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item">{{ block.settings.heading_h6 }}</div></div>
						{% endif %}
					{% when 'subtitle' %}
						{% if block.settings.subtitle != blank %}
							<div class="subtitle_lg item-{{ block.id }} wow {{ block.settings.title_animation }}"><div class="caption-item">{{ block.settings.subtitle }}</div></div>
						{% endif %}
					{% when 'text' %}
						{% if block.settings.text != blank %}
							<div class="text-{{ block.settings.text_size }} item-{{ block.id }}"><div class="caption-item">{{ block.settings.text }}</div></div>
						{% endif %}
					{% when 'timer' %}
						{%- if block.settings.time != blank -%}
							<div class="js-countdown block-timer item-{{ block.id }}" data-time="{{ block.settings.time }}"></div>
						{%- endif -%}

						{% when 'groupButtons' %}

							<div class="groupButtons" style="display: table-caption;column-count: {{ block.settings.column_count }};margin: {{ block.settings.offset_block_general }};width: {{ block.settings.block_width }}%;">
								<ul>
									<li>
										{% if block.settings.button_label_1.size > 0 and block.settings.button_link_1.size > 0 %}
											<a href="{{ block.settings.button_link_1 }}" class="{% if block.settings.use_button_1 %}btn {{ block.settings.btn_style_1 }} {{ block.settings.btn_size_1 }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block_1 }};">{{ block.settings.button_label_1 }}</a>
										{% endif %}
									</li>
									<li>
										{% if block.settings.button_label_2.size > 0 and block.settings.button_link_2.size > 0 %}
											<a href="{{ block.settings.button_link_2 }}" class="{% if block.settings.use_button_2 %}btn {{ block.settings.btn_style_2 }} {{ block.settings.btn_size_2 }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block_2 }};">{{ block.settings.button_label_2 }}</a>
										{% endif %}
									</li>
									<li>
										{% if block.settings.button_label_3.size > 0 and block.settings.button_link_3.size > 0 %}
											<a href="{{ block.settings.button_link_3 }}" class="{% if block.settings.use_button_3 %}btn {{ block.settings.btn_style_3 }} {{ block.settings.btn_size_3 }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block_3 }};">{{ block.settings.button_label_3 }}</a>
										{% endif %}
									</li>
									<li>
										{% if block.settings.button_label_4.size > 0 and block.settings.button_link_4.size > 0 %}
											<a href="{{ block.settings.button_link_4 }}" class="{% if block.settings.use_button_4 %}btn {{ block.settings.btn_style_4 }} {{ block.settings.btn_size_4 }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block_4 }};">{{ block.settings.button_label_4 }}</a>
										{% endif %}
									</li>
									<li>
										{% if block.settings.button_label_5.size > 0 and block.settings.button_link_5.size > 0 %}
											<a href="{{ block.settings.button_link_5 }}" class="{% if block.settings.use_button_5 %}btn {{ block.settings.btn_style_5 }} {{ block.settings.btn_size_5 }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block_5 }};">{{ block.settings.button_label_5 }}</a>
										{% endif %}
									</li>
									<li>
										{% if block.settings.button_label_6.size > 0 and block.settings.button_link_6.size > 0 %}
											<a href="{{ block.settings.button_link_6 }}" class="{% if block.settings.use_button_6 %}btn {{ block.settings.btn_style_6 }} {{ block.settings.btn_size_6 }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block_6 }};">{{ block.settings.button_label_6 }}</a>
										{% endif %}
									</li>
								</ul>




							</div>
					{% when 'button' %}
						{% if block.settings.button_label.size > 0 and block.settings.button_link.size > 0 %}
							<a href="{{ block.settings.button_link }}" class="{% if block.settings.use_button %}btn {{ block.settings.btn_style }} {{ block.settings.btn_size }}{% else %}link link-primary {% endif %}" style="margin: {{ block.settings.offset_block }};">{{ block.settings.button_label }}</a>
						{% endif %}
					{% when 'html' %}
						{% if block.settings.code.size > 0 %}
							{{ block.settings.code }}
						{% endif %}
					{% endcase %}
				{% endfor %}
			</div>
		</div>
	</div>
</div>

