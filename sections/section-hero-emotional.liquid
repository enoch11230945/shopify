    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary button text",
      "default": "Shop the Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "View Message Cards"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "header",
      "content": "Countdown"
    },
    {
      "type": "checkbox",
      "id": "show_countdown",
      "label": "Show shipping countdown",
      "default": true
    },
    {
      "type": "text",
      "id": "countdown_date",
      "label": "Cutoff date (YYYY-MM-DD)",
      "default": "2026-02-01"
    },
    {
      "type": "text",
      "id": "countdown_occasion",
      "label": "Occasion name",
      "default": "Valentine's Day"
    },
    {
      "type": "header",
      "content": "Extras"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Emotional Hero",
      "settings": {
        "occasion_badge": "Valentine's Day Collection",
        "heading": "Say What You Feel",
        "subheading": "Beautiful necklaces paired with heartfelt message cards. Because sometimes, you need a little help saying 'I love you'.",
        "button_text": "Shop Now",
        "show_countdown": true
      }
    }
  ]
}
