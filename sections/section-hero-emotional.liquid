{%- comment -%}
  London_Emotion_Engine - Emotional Hero Section
  High-impact hero for jewelry emotional marketing
  Optimized for Valentine's Day / Mother's Day campaigns
{%- endcomment -%}

<section class="hero-emotional section-style-{{ section.id }}" 
         style="--hero-height: {{ section.settings.hero_height }}vh;">
  
  {%- if section.settings.background_image != blank -%}
    <div class="hero-background">
      <img src="{{ section.settings.background_image | image_url: width: 1920 }}"
           alt="{{ section.settings.heading | escape }}"
           class="hero-bg-image lazyload"
           loading="eager">
      <div class="hero-overlay" style="background: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
    </div>
  {%- else -%}
    <div class="hero-background hero-gradient"></div>
  {%- endif -%}

  <div class="container">
    <div class="hero-content text-{{ section.settings.text_alignment }}">
      
      {%- if section.settings.occasion_badge != blank -%}
        <span class="hero-badge">{{ section.settings.occasion_badge }}</span>
      {%- endif -%}
      
      {%- if section.settings.heading != blank -%}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="hero-subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
      
      {%- if section.settings.emotional_quote != blank -%}
        <blockquote class="hero-quote">
          <p>"{{ section.settings.emotional_quote }}"</p>
        </blockquote>
      {%- endif -%}
      
      <div class="hero-cta-group">
        {%- if section.settings.button_text != blank -%}
          <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-lg hero-btn-primary">
            {{ section.settings.button_text }}
          </a>
        {%- endif -%}
        
        {%- if section.settings.secondary_button_text != blank -%}
          <a href="{{ section.settings.secondary_button_link }}" class="btn btn-outline hero-btn-secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {%- endif -%}
      </div>
      
      {%- if section.settings.show_countdown and section.settings.countdown_date != blank -%}
        <div class="hero-countdown-wrapper">
          {% render 'shipping-countdown', 
             deadline_date: section.settings.countdown_date, 
             occasion_name: section.settings.countdown_occasion %}
        </div>
      {%- endif -%}
      
    </div>
  </div>
  
  {%- if section.settings.show_scroll_indicator -%}
    <div class="hero-scroll-indicator">
      <span>Scroll</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 5v14M19 12l-7 7-7-7"/>
      </svg>
    </div>
  {%- endif -%}
  
</section>

<style>
.hero-emotional {
  position: relative;
  min-height: var(--hero-height, 80vh);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  color: #fff;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.hero-bg-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hero-gradient {
  background: linear-gradient(135deg, #1a1a1a 0%, #333 50%, #1a1a1a 100%);
}

.hero-content {
  position: relative;
  z-index: 1;
  max-width: 800px;
  padding: 2rem;
}

.hero-badge {
  display: inline-block;
  background: linear-gradient(135deg, #d4a574, #c49464);
  color: #fff;
  padding: 0.5rem 1.5rem;
  border-radius: 30px;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin-bottom: 1.5rem;
  animation: fadeInUp 0.8s ease forwards;
}

.hero-heading {
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 300;
  line-height: 1.1;
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
  animation: fadeInUp 0.8s ease 0.1s forwards;
  opacity: 0;
}

.hero-subheading {
  font-size: clamp(1rem, 2vw, 1.25rem);
  font-weight: 300;
  opacity: 0.9;
  max-width: 600px;
  margin: 0 auto 1.5rem;
  line-height: 1.6;
  animation: fadeInUp 0.8s ease 0.2s forwards;
  opacity: 0;
}

.hero-quote {
  font-size: clamp(1.1rem, 2.5vw, 1.5rem);
  font-style: italic;
  color: #d4a574;
  margin: 2rem 0;
  padding: 0;
  border: none;
  animation: fadeInUp 0.8s ease 0.3s forwards;
  opacity: 0;
}

.hero-quote p {
  margin: 0;
}

.hero-cta-group {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 2rem;
  animation: fadeInUp 0.8s ease 0.4s forwards;
  opacity: 0;
}

.hero-btn-primary {
  background: linear-gradient(135deg, #d4a574, #c49464);
  border: none;
  padding: 1rem 2.5rem;
  font-size: 1rem;
  font-weight: 600;
  letter-spacing: 0.05em;
  border-radius: 4px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.hero-btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(212, 165, 116, 0.4);
}

.hero-btn-secondary {
  border: 2px solid rgba(255,255,255,0.5);
  color: #fff;
  padding: 1rem 2.5rem;
  font-size: 1rem;
  background: transparent;
  transition: all 0.3s ease;
}

.hero-btn-secondary:hover {
  background: rgba(255,255,255,0.1);
  border-color: #fff;
}

.hero-countdown-wrapper {
  margin-top: 2rem;
  animation: fadeInUp 0.8s ease 0.5s forwards;
  opacity: 0;
}

.hero-countdown-wrapper .shipping-countdown {
  max-width: 400px;
  margin: 0 auto;
}

.hero-scroll-indicator {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  color: rgba(255,255,255,0.6);
  font-size: 0.75rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  animation: bounce 2s infinite;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
  40% { transform: translateX(-50%) translateY(-10px); }
  60% { transform: translateX(-50%) translateY(-5px); }
}

@media (max-width: 768px) {
  .hero-emotional {
    min-height: 70vh;
  }
  
  .hero-content {
    padding: 1.5rem;
  }
  
  .hero-cta-group {
    flex-direction: column;
    align-items: center;
  }
  
  .hero-btn-primary,
  .hero-btn-secondary {
    width: 100%;
    max-width: 280px;
  }
}
</style>

{% schema %}
{
  "name": "Emotional Hero",
  "tag": "section",
  "class": "section section--hero-emotional",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Hero height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "default": 80
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Centre" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay colour",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "occasion_badge",
      "label": "Occasion badge",
      "default": "Valentine's Day Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Say What You Feel"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Beautiful necklaces paired with heartfelt message cards. Because sometimes, you need a little help saying 'I love you'."
    },
    {
      "type": "textarea",
      "id": "emotional_quote",
      "label": "Emotional quote",
