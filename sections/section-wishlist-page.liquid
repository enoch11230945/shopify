{%- comment -%}
  AUREA Developer Stack - Wishlist Page Template
  Displays all wishlisted products from localStorage
  Per app.md Patch #1
  
  Create a page in Shopify Admin and assign this template
{%- endcomment -%}

<div class="wishlist-page">
  <div class="container">
    
    <div class="wishlist-header">
      <h1 class="wishlist-title">Your Wishlist</h1>
      <p class="wishlist-subtitle" id="wishlistSubtitle">Loading...</p>
    </div>
    
    <div class="wishlist-empty" id="wishlistEmpty" style="display: none;">
      <div class="empty-icon">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
          <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
        </svg>
      </div>
      <h2>Your wishlist is empty</h2>
      <p>Save your favourite items here by clicking the heart icon on any product.</p>
      <a href="/collections/all" class="btn btn-primary">Browse Products</a>
    </div>
    
    <div class="wishlist-grid" id="wishlistGrid"></div>
    
    <div class="wishlist-actions" id="wishlistActions" style="display: none;">
      <button type="button" class="btn btn-outline" onclick="clearWishlist()">
        Clear Wishlist
      </button>
    </div>
    
  </div>
</div>

<style>
.wishlist-page {
  padding: 60px 0;
  min-height: 60vh;
}

.wishlist-header {
  text-align: center;
  margin-bottom: 3rem;
}

.wishlist-title {
  font-size: 2.5rem;
  font-weight: 300;
  color: #1a1a1a;
  margin-bottom: 0.5rem;
}

.wishlist-subtitle {
  font-size: 1rem;
  color: #666;
}

.wishlist-empty {
  text-align: center;
  padding: 60px 20px;
  max-width: 400px;
  margin: 0 auto;
}

.empty-icon {
  color: #ddd;
  margin-bottom: 1.5rem;
}

.wishlist-empty h2 {
  font-size: 1.5rem;
  font-weight: 400;
  color: #1a1a1a;
  margin-bottom: 0.75rem;
}

.wishlist-empty p {
  font-size: 1rem;
  color: #666;
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.wishlist-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 24px;
}

.wishlist-item {
  background: #fff;
  border: 1px solid #eee;
  border-radius: 12px;
  overflow: hidden;
  transition: all 0.3s ease;
}

.wishlist-item:hover {
  box-shadow: 0 8px 30px rgba(0,0,0,0.08);
  transform: translateY(-2px);
}

.wishlist-item-image {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
  background: #f5f5f5;
}

.wishlist-item-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.wishlist-item:hover .wishlist-item-image img {
  transform: scale(1.05);
}

.wishlist-item-remove {
  position: absolute;
  top: 10px;
  right: 10px;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: rgba(255,255,255,0.9);
  border: none;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  transition: all 0.2s ease;
}

.wishlist-item-remove:hover {
  background: #fff;
  color: #e74c3c;
}

.wishlist-item-content {
  padding: 1rem;
}

.wishlist-item-title {
  font-size: 1rem;
  font-weight: 500;
  color: #1a1a1a;
  margin-bottom: 0.5rem;
  text-decoration: none;
  display: block;
}

.wishlist-item-title:hover {
  color: #d4a574;
}

.wishlist-item-price {
  font-size: 1.1rem;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 1rem;
}

.wishlist-item-price .compare-price {
  font-size: 0.9rem;
  color: #999;
  text-decoration: line-through;
  margin-right: 0.5rem;
  font-weight: 400;
}

.wishlist-item-cta {
  width: 100%;
  padding: 0.75rem;
  background: #1a1a1a;
  color: #fff;
  border: none;
  border-radius: 6px;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.wishlist-item-cta:hover {
  background: #333;
}

.wishlist-item.loading {
  opacity: 0.5;
  pointer-events: none;
}

.wishlist-actions {
  text-align: center;
  margin-top: 3rem;
  padding-top: 2rem;
  border-top: 1px solid #eee;
}

@media (max-width: 768px) {
  .wishlist-page {
    padding: 40px 0;
  }
  
  .wishlist-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  
  .wishlist-title {
    font-size: 2rem;
  }
}
</style>

<script>
(function() {
  'use strict';
  
  const grid = document.getElementById('wishlistGrid');
  const empty = document.getElementById('wishlistEmpty');
  const subtitle = document.getElementById('wishlistSubtitle');
  const actions = document.getElementById('wishlistActions');
  
  function loadWishlist() {
    // Wait for AureaWishlist to be available
    if (typeof AureaWishlist === 'undefined') {
      setTimeout(loadWishlist, 100);
      return;
    }
    
    const items = AureaWishlist.getItems();
    
    if (items.length === 0) {
      showEmpty();
      return;
    }
    
    subtitle.textContent = `${items.length} item${items.length > 1 ? 's' : ''} saved`;
    actions.style.display = 'block';
    
    // Create placeholders for all items first
    items.forEach(productId => {
      const placeholder = createPlaceholderCard(productId);
      grid.appendChild(placeholder);
    });
    
    // FIXED: Fetch products.json ONCE, not N times
    fetch(`/products.json?limit=250`)
      .then(r => r.json())
      .then(data => {
        const productMap = new Map();
        data.products.forEach(p => productMap.set(String(p.id), p));
        
        // Now process each wishlist item
        items.forEach(productId => {
          const placeholder = grid.querySelector(`[data-product-id="${productId}"]`);
          const product = productMap.get(String(productId));
          
          if (product && placeholder) {
            const card = createProductCard(product);
            placeholder.replaceWith(card);
          } else if (placeholder) {
            // Product not found, remove from wishlist
            AureaWishlist.remove(productId);
            placeholder.remove();
          }
        });
        
        checkIfEmpty();
      })
      .catch(err => {
        console.warn('Failed to fetch products');
        grid.querySelectorAll('.wishlist-item.loading').forEach(el => el.remove());
        checkIfEmpty();
      });
  }
  
  function createPlaceholderCard(productId) {
    const div = document.createElement('div');
    div.className = 'wishlist-item loading';
    div.dataset.productId = productId;
    div.innerHTML = `
      <div class="wishlist-item-image">
        <div style="width:100%;height:100%;background:#f5f5f5;"></div>
      </div>
      <div class="wishlist-item-content">
        <div style="height:20px;background:#f0f0f0;border-radius:4px;margin-bottom:8px;"></div>
        <div style="height:24px;width:60%;background:#f0f0f0;border-radius:4px;"></div>
      </div>
    `;
    return div;
  }
  
  function createProductCard(product) {
    const variant = product.variants[0];
    const comparePrice = variant.compare_at_price;
    const price = variant.price;
    
    const div = document.createElement('div');
    div.className = 'wishlist-item';
    div.dataset.productId = product.id;
    
    const imageUrl = product.images && product.images[0] 
      ? product.images[0].src.replace(/\.([^.]+)$/, '_400x.$1')
      : '//cdn.shopify.com/s/files/1/0533/2089/files/placeholder.jpg';
    
    div.innerHTML = `
      <div class="wishlist-item-image">
        <a href="/products/${product.handle}">
          <img src="${imageUrl}" alt="${product.title}" loading="lazy">
        </a>
        <button type="button" class="wishlist-item-remove" onclick="removeFromWishlist(${product.id}, this)">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 6L6 18M6 6l12 12"/>
          </svg>
        </button>
      </div>
      <div class="wishlist-item-content">
        <a href="/products/${product.handle}" class="wishlist-item-title">${product.title}</a>
        <div class="wishlist-item-price">
          ${comparePrice && parseFloat(comparePrice) > parseFloat(price) 
            ? `<span class="compare-price">£${parseFloat(comparePrice).toFixed(2)}</span>` 
            : ''}
          £${parseFloat(price).toFixed(2)}
        </div>
        <button type="button" class="wishlist-item-cta" onclick="addToCartFromWishlist(${variant.id}, this)">
          Add to Bag
        </button>
      </div>
    `;
    
    return div;
  }
  
  function showEmpty() {
    grid.innerHTML = '';
    empty.style.display = 'block';
    actions.style.display = 'none';
    subtitle.textContent = 'No items saved';
  }
  
  function checkIfEmpty() {
    if (grid.querySelectorAll('.wishlist-item').length === 0) {
      showEmpty();
    }
  }
  
  // Global functions
  window.removeFromWishlist = function(productId, btn) {
    const item = btn.closest('.wishlist-item');
    item.style.opacity = '0';
    item.style.transform = 'scale(0.9)';
    
    setTimeout(() => {
      AureaWishlist.remove(productId);
      item.remove();
      
      const remaining = AureaWishlist.count();
      subtitle.textContent = `${remaining} item${remaining !== 1 ? 's' : ''} saved`;
      
      checkIfEmpty();
    }, 200);
  };
  
  window.addToCartFromWishlist = function(variantId, btn) {
    btn.textContent = 'Adding...';
    btn.disabled = true;
    
    fetch('/cart/add.js', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ id: variantId, quantity: 1 })
    })
    .then(r => r.json())
    .then(data => {
      btn.textContent = 'Added ✓';
      setTimeout(() => {
        btn.textContent = 'Add to Bag';
        btn.disabled = false;
      }, 1500);
    })
    .catch(err => {
      btn.textContent = 'Error';
      setTimeout(() => {
        btn.textContent = 'Add to Bag';
        btn.disabled = false;
      }, 1500);
    });
  };
  
  window.clearWishlist = function() {
    if (confirm('Are you sure you want to clear your wishlist?')) {
      AureaWishlist.clear();
      showEmpty();
    }
  };
  
  // Initialize
  loadWishlist();
  
})();
</script>

