{%- comment -%}
  London_Emotion_Engine - Featured Gift Section
  Highlights a single product with emotional messaging
  Perfect for showcasing Love Knot or Moissanite necklace
{%- endcomment -%}

<section class="featured-gift section-style-{{ section.id }}" 
         style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    <div class="featured-gift-wrapper">
      
      {%- if section.settings.product != blank -%}
        {%- assign featured_product = section.settings.product -%}
        
        <div class="featured-gift-image">
          <div class="gift-image-wrapper">
            {%- if featured_product.featured_image != blank -%}
              <img src="{{ featured_product.featured_image | image_url: width: 800 }}"
                   alt="{{ featured_product.title | escape }}"
                   class="gift-product-image lazyload"
                   loading="lazy">
            {%- else -%}
              <div class="gift-placeholder">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
              </div>
            {%- endif -%}
            
            {%- if section.settings.badge_text != blank -%}
              <span class="gift-badge">{{ section.settings.badge_text }}</span>
            {%- endif -%}
          </div>
        </div>
        
        <div class="featured-gift-content">
          {%- if section.settings.pre_title != blank -%}
            <span class="gift-pre-title">{{ section.settings.pre_title }}</span>
          {%- endif -%}
          
          <h2 class="gift-title">{{ section.settings.custom_title | default: featured_product.title }}</h2>
          
          {%- if section.settings.emotional_message != blank -%}
            <div class="gift-emotional-message">
              <p>{{ section.settings.emotional_message }}</p>
            </div>
          {%- endif -%}
          
          <div class="gift-price">
            {%- if featured_product.compare_at_price > featured_product.price -%}
              <span class="price-compare">{{ featured_product.compare_at_price | money }}</span>
            {%- endif -%}
            <span class="price-current">{{ featured_product.price | money }}</span>
          </div>
          
          <ul class="gift-features">
            {%- for block in section.blocks -%}
              <li class="gift-feature-item" {{ block.shopify_attributes }}>
                <svg class="feature-check" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6L9 17l-5-5"/>
                </svg>
                <span>{{ block.settings.feature_text }}</span>
              </li>
            {%- endfor -%}
          </ul>
          
          <div class="gift-cta">
            <a href="{{ featured_product.url }}" class="btn btn-primary btn-lg gift-btn">
              {{ section.settings.button_text | default: 'Shop Now' }}
            </a>
            
            {%- if section.settings.show_quick_add -%}
              <form action="/cart/add" method="post" class="gift-quick-add">
                <input type="hidden" name="id" value="{{ featured_product.selected_or_first_available_variant.id }}">
                <input type="hidden" name="quantity" value="1">
                <button type="submit" class="btn btn-secondary gift-btn-secondary">
                  Add to Bag
                </button>
              </form>
            {%- endif -%}
          </div>
          
          {%- if section.settings.delivery_note != blank -%}
            <div class="gift-delivery-note">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
              <span>{{ section.settings.delivery_note }}</span>
            </div>
          {%- endif -%}
        </div>
        
      {%- else -%}
        <div class="featured-gift-placeholder text-center">
          <p>Select a product in the theme editor</p>
        </div>
      {%- endif -%}
      
    </div>
  </div>
</section>

<style>
.featured-gift {
  padding: 80px 0;
}

.featured-gift-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

.gift-image-wrapper {
  position: relative;
  border-radius: 16px;
  overflow: hidden;
  background: #faf9f8;
}

.gift-product-image {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.6s ease;
}

.gift-image-wrapper:hover .gift-product-image {
  transform: scale(1.05);
}

.gift-placeholder {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  color: #ccc;
}

.gift-badge {
  position: absolute;
  top: 20px;
  left: 20px;
  background: linear-gradient(135deg, #d4a574, #c49464);
  color: #fff;
  padding: 0.5rem 1rem;
  border-radius: 4px;
  font-size: 0.75rem;
  font-weight: 600;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

.gift-pre-title {
  display: block;
  color: #d4a574;
  font-size: 0.85rem;
  font-weight: 600;
  letter-spacing: 0.15em;
  text-transform: uppercase;
  margin-bottom: 0.75rem;
}

.gift-title {
  font-size: 2.5rem;
  font-weight: 300;
  color: #1a1a1a;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.gift-emotional-message {
  font-size: 1.1rem;
  color: #666;
  line-height: 1.8;
  margin-bottom: 1.5rem;
  padding-left: 1rem;
  border-left: 3px solid #d4a574;
}

.gift-price {
  display: flex;
  align-items: baseline;
  gap: 0.75rem;
  margin-bottom: 1.5rem;
}

.price-current {
  font-size: 2rem;
  font-weight: 600;
  color: #1a1a1a;
}

.price-compare {
  font-size: 1.25rem;
  color: #999;
  text-decoration: line-through;
}

.gift-features {
  list-style: none;
  padding: 0;
  margin: 0 0 2rem;
}

.gift-feature-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 0;
  color: #444;
  font-size: 0.95rem;
}

.feature-check {
  color: #d4a574;
  flex-shrink: 0;
}

.gift-cta {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
}

.gift-btn {
  background: linear-gradient(135deg, #d4a574, #c49464);
  border: none;
  padding: 1rem 2rem;
  font-weight: 600;
  color: #fff;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.gift-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(212, 165, 116, 0.35);
  color: #fff;
}

.gift-btn-secondary {
  background: transparent;
  border: 2px solid #1a1a1a;
  color: #1a1a1a;
  padding: 1rem 2rem;
  font-weight: 600;
  transition: all 0.3s ease;
}

.gift-btn-secondary:hover {
  background: #1a1a1a;
  color: #fff;
}

.gift-delivery-note {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #666;
  font-size: 0.85rem;
}

.gift-delivery-note svg {
  color: #d4a574;
}

@media (max-width: 991px) {
  .featured-gift-wrapper {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .gift-title {
    font-size: 2rem;
  }
}

@media (max-width: 576px) {
  .featured-gift {
    padding: 50px 0;
  }
  
  .gift-cta {
    flex-direction: column;
  }
  
  .gift-btn,
  .gift-btn-secondary {
    width: 100%;
    text-align: center;
  }
}
</style>

